<% scale = 0.597 %>
<% width = Milkman::Application.config.project["image"]["width"]*scale %>
<% height = Milkman::Application.config.project["image"]["height"]*scale %>

<script type="text/javascript">
    $( document ).ready(function( $ ) {
      $('.imageFrame[frame!=0]').hide();
      $('ellipse[frame!=0]').hide();
    });
</script>

<svg height="<%= height %>" version="1.1" width="<%= width %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 <%= width %> <%= height %>" preserveAspectRatio="xMinYMin" style="overflow: hidden; position: relative;">
  <%- @opts = [@s.image, width, height] -%>
  <%= render partial: "image", obj: @opts %>
	<%- count=0 -%>
	<%- Milkman::Application.config.project["object_types"].each do |type| -%>
	<%- @raw.annotations[type]["raw"].each do |d| -%>
		<%- new_d = {"x"=>d[0], "y"=>d[1], "frame"=>d[2]} -%>
		<%- @obj = [new_d, @s.zooniverse_id, scale, Milkman::Application.config.project["hex"][type], count, "raw"] -%>
        <%= render partial: "#{type}", obj: @obj %>
		<%- count+=1 -%>
	<%- end -%>
	<%- end -%>
  <text fill="#ffffff" stroke="none" font="10px &quot;Arial&quot;" text-anchor="left" y="<%= (Milkman::Application.config.project["image"]["height"]-15)*scale %>" x="<%= 10*scale %>" >Raw Drawings</text>
</svg>
