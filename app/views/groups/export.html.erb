<p><%= @g.metadata['title'] %></p>
<p><%= @g.stats['complete'] %>/<%= @g.stats['total'] %> pages complete.</p>
<p>Status: <%= @g.state %></p>

<table>
  <theader>
    <th>Photo</th>
    <% @metadata_keys.each do |k| %>
      <th><%= k %></th>
    <% end %>
    <th>Type</th>
    <th>Value</th>
    <th>Vote</th>
  </theader>
  <tbody>
    <% @results.each do |result| %>
      <% result[:keywords].each do |type, votes| %>
        <% votes.each do |vote| %>
        <tr>
          <td><a href="/subjects/<%= result[:subject_id] %>"><%= result[:subject_id] %></a></td>
          <% @metadata_keys.each do |k| %>
            <td><%= result[:metadata][k] %></td>
          <% end %>
          <td><%= type %></td>
          <td><%= vote[:choice] %></td>
          <td><%= vote[:vote] %></td>
        </tr>
        <% end %>
      <% end%>
      <% result[:marks].each do |type, votes| %>
        <% votes.each do |choice, vote| %>
          <tr>
            <td><a href="/subjects/<%= result[:subject_id] %>"><%= result[:subject_id] %></a></td>
            <% @metadata_keys.each do |k| %>
              <td><%= result[:metadata][k] %></td>
            <% end %>
            <td><%= type %></td>
            <td><%= choice %></td>
            <td><%= vote %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>